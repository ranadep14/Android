<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:id="@+id/lin_dawn_running"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@color/blue_border"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_msg"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/icon_height_size"
            android:layout_centerInParent="true"
            android:textSize="@dimen/all_text_size"
            android:textColor="@color/white"
            android:text="Password"
            tools:ignore="ObsoleteLayoutParam" />
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/icon_height_size"
            android:layout_marginRight="@dimen/icon_height_size"
            android:textSize="@dimen/all_text_size">


            <EditText
                android:id="@+id/demo_pwd"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#979797"
                android:hint="Enter password here"
                android:textColor="@color/white"
                android:inputType="textPassword"
               android:textSize="@dimen/all_text_size"
               />


        </LinearLayout>
        <TextView
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/icon_height_size"
            android:paddingLeft="10dp"
            android:id="@+id/valid_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Invalid password, please try again"
            android:textColor="@color/red"
            />
    </LinearLayout>



    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <Button
                android:id="@+id/btn_cancle"
                android:textAllCaps="false"
                android:layout_width="100dp"
                android:layout_height="@dimen/icon_height_size"
                android:text="Cancel"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background_style"
                android:textColor="@color/white" />
            <Button
                android:layout_marginLeft="40dp"
                android:id="@+id/btn_confirm"
                android:textAllCaps="false"
                android:layout_width="100dp"
                android:layout_height="@dimen/icon_height_size"
                android:text="OK"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background_style"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>
