<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/customise_sub_action_bar"/>
    <RelativeLayout
        android:paddingRight="@dimen/actionbar_height"
        android:paddingLeft="@dimen/actionbar_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin_scence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_size"
            android:visibility="gone"
            android:orientation="vertical">
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/txt_room_title"
                   android:textSize="@dimen/all_text_size"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_size"
                    android:text="Living Room- Lights"
                    />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_circadian"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_size"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/all_text_size"
                android:text="Circadian"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/rd_circadian"
                    android:buttonTint="#2B669E"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:checked="true"
                    android:enabled="false"
                   android:textSize="@dimen/all_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    tools:targetApi="lollipop"
                    tools:ignore="ObsoleteLayoutParam" />
            </RelativeLayout>
        </LinearLayout>
         <include layout="@layout/line_divider"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_energize"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_size"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="@dimen/all_text_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/energise"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/rd_energise"
                    android:buttonTint="#2B669E"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                   android:textSize="@dimen/all_text_size"
                    android:clickable="false"
                    android:enabled="false"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    tools:targetApi="lollipop"
                    tools:ignore="ObsoleteLayoutParam" />
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/line_divider"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_relax"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_size"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Relax"
                    android:gravity="center_vertical"
                    tools:ignore="NestedWeights" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/rd_relax"
                        android:buttonTint="#2B669E"
                        android:layout_alignParentRight="true"
                        android:clickable="false"
                        android:enabled="false"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/all_text_size"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:targetApi="lollipop"
                        tools:ignore="ObsoleteLayoutParam" />
                </RelativeLayout>
            </LinearLayout>
            <include layout="@layout/line_divider"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_dawn"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_size"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dawn"
                    android:gravity="center_vertical"
                    tools:ignore="NestedWeights" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/rd_dawn"
                        android:buttonTint="#2B669E"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/all_text_size"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:paddingRight="5dp"
                        android:clickable="false"
                        android:enabled="false"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:targetApi="lollipop"
                        tools:ignore="ObsoleteLayoutParam" />
                </RelativeLayout>
            </LinearLayout>
            <include layout="@layout/line_divider"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_sleep"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_size"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
               android:textSize="@dimen/all_text_size"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sleep"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/rd_sleep"
                    android:buttonTint="#2B669E"
                    android:layout_alignParentRight="true"
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/all_text_size"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    tools:targetApi="lollipop"
                    tools:ignore="ObsoleteLayoutParam" />
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/line_divider"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_cooking"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_size"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
               android:textSize="@dimen/all_text_size"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cooking"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/rd_cooking"
                    android:buttonTint="#2B669E"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/all_text_size"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:paddingRight="5dp"
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:targetApi="lollipop"
                    tools:ignore="ObsoleteLayoutParam" />
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/line_divider"/>
</LinearLayout>

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
