<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_bg_color"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cloudsinc.welltek_native_V1.clouds_app.activities.SettingLocation">


        <LinearLayout

            android:layout_below="@+id/txt_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <include layout="@layout/customise_sub_action_bar"/>






            <LinearLayout
                android:paddingRight="@dimen/actionbar_height"
                android:paddingLeft="@dimen/actionbar_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="@string/about_darwin_id"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/all_text_size"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights,ObsoleteLayoutParam" />
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/txt_darwin_id"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/all_text_size"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="right"
                    android:padding="10dp"
                    android:layout_weight="1"/>

            </LinearLayout>




            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5sp"
                android:layout_marginBottom="10dp"
                android:background="@color/divider_color"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/about_darwin_firmware_version"
                    android:textSize="@dimen/all_text_size"
                    android:padding="10dp"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/txt_firm_version"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/all_text_size"
                    android:text=""
                    android:gravity="right"
                    android:padding="10dp"
                    android:layout_weight="1"/>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5sp"
                android:layout_marginBottom="10dp"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_app_version"
                    android:textSize="@dimen/all_text_size"
                    android:padding="10dp"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:id="@+id/txt_app_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size"
                    android:text=""
                    android:gravity="right"
                    android:padding="10dp"
                    android:layout_weight="1"/>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5sp"
                android:layout_marginBottom="10dp"
                android:background="@color/divider_color"/>
                <RelativeLayout
                    android:layout_marginTop="@dimen/icon_height_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:background="@drawable/btn_border_white"
                        android:id="@+id/txt_reboot_darwin"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="40dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_text_size"
                        android:text="@string/about_reboot_darwin"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
