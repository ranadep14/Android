<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_connecting__proccess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:orientation="vertical"
            android:gravity="center"
             android:id="@+id/lyt_conn"
             android:weightSum="1"
             tools:ignore="UselessParent">
            <!-- <com.wang.avi.AVLoadingIndicatorView
                 android:id="@+id/progDialog"
                 android:layout_width="200dp"
             android:layout_height="200dp"
             android:visibility="visible"
             app:indicatorName="BallScaleRippleMultipleIndicator"
             app:indicatorColor="@color/whate"
                 />-->

             <ProgressBar
                 android:indeterminate="true"
                 android:indeterminateTintMode="src_atop"
                 android:indeterminateTint="@color/actionbar_back"
                 android:id="@+id/login_progress"
                 style="?android:attr/progressBarStyleLarge"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="8dp"

                 tools:targetApi="lollipop" />

             <TextView
                android:id="@+id/txt_connect_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                 android:textSize="@dimen/all_text_size"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Connecting...Please Wait.."/>
        </LinearLayout>

    </RelativeLayout>
