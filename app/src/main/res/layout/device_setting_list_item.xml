<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fragment_bg_color"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="UselessParent">
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_device_type"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_width="@dimen/icon_height_size"
                android:layout_height="@dimen/icon_height_size"
                app:srcCompat="@drawable/ic_drop"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_devices_title"
                android:textSize="@dimen/all_text_size"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="LIVING ROOM ssssssssssssssssssssssssssssssssssssssss"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt_assind_room"
                android:visibility="gone"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_devices_id"
                android:visibility="gone"
                android:textSize="@dimen/all_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="LIVING ROOM"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="@dimen/all_text_size"
                android:visibility="gone"
                android:id="@+id/txt_devices_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Lights"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="9"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:padding="6dp"
                android:layout_width="@dimen/icon_height_size"
                android:layout_height="@dimen/icon_height_size"
                app:srcCompat="@drawable/right_white"
              />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"/>
    </RelativeLayout>
</RelativeLayout>