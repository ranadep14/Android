<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/lyt_lights"
            android:visibility="visible"
            android:weightSum="360"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_weight="70"
                android:orientation="vertical"
                android:weightSum="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:layout_weight="99"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights">
                    <ImageView
                        app:srcCompat="@drawable/explights_b"
                        android:layout_width="@dimen/days_icon_height_size_portrait"
                        android:layout_height="@dimen/days_icon_height_size_portrait" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="UselessLeaf"></LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:orientation="vertical"
                android:layout_weight="290"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="290"
                    android:orientation="horizontal"
                    android:layout_weight="99"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_weight="250"
                        android:layout_width="0dp"
                        android:gravity="center_vertical|left"
                        android:layout_height="match_parent"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:maxEms="10"
                            android:textSize="@dimen/all_text_size_portrait"
                            android:text="Lights"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="40"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:rotation="270"
                            app:srcCompat="@drawable/ic_arrow_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/divider_color"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"></LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_blinds"
            android:visibility="visible"
            android:weightSum="360"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_weight="70"
                android:orientation="vertical"
                android:weightSum="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:layout_weight="99"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights">
                    <ImageView
                        app:srcCompat="@drawable/expblinds_b"
                        android:layout_width="@dimen/days_icon_height_size_portrait"
                        android:layout_height="@dimen/days_icon_height_size_portrait" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="UselessLeaf"></LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:orientation="vertical"
                android:layout_weight="290"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="99"
                    android:weightSum="290"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_weight="250"
                        android:layout_width="0dp"
                        android:gravity="center_vertical|left"
                        android:layout_height="match_parent"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:gravity="center_vertical|left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:maxEms="10"
                            android:textSize="@dimen/all_text_size_portrait"
                            android:text="Blinds"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="40"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:rotation="270"
                            app:srcCompat="@drawable/ic_arrow_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/divider_color"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"></LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_audio"
            android:visibility="visible"
            android:weightSum="360"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_weight="70"
                android:orientation="vertical"
                android:weightSum="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:layout_weight="99"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights">
                    <ImageView
                        app:srcCompat="@drawable/expaudio_b"
                        android:layout_width="@dimen/days_icon_height_size_portrait"
                        android:layout_height="@dimen/days_icon_height_size_portrait" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="UselessLeaf"></LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:orientation="vertical"
                android:layout_weight="290"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="99"
                    android:weightSum="290"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_weight="250"
                        android:layout_width="0dp"
                        android:gravity="center_vertical|left"
                        android:layout_height="match_parent"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/txt_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:maxEms="10"
                            android:textSize="@dimen/all_text_size_portrait"
                            android:text="Audio"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="40"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:rotation="270"
                            app:srcCompat="@drawable/ic_arrow_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/divider_color"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"></LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="UselessLeaf">
        </LinearLayout>
        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="UselessLeaf">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>