<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_activity_main"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloudsinc.welltekmobile.native_v2_welltek.activities.MainActivity"
    android:baselineAligned="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">
    <LinearLayout
        android:background="@color/tab_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lytmainfont"
        >
        <LinearLayout
            android:background="#010A1E"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/lyt_family_name"
            android:layout_weight="1.3"
            android:layout_height="@dimen/setting_item_size"
            android:baselineAligned="false"
            tools:ignore="NestedWeights">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                tools:ignore="NestedWeights">
                <RelativeLayout
                    android:id="@+id/rel_family_inisiatl"
                    android:background="@drawable/circle_light_blue"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/icon_height_size"
                    tools:ignore="UselessParent">
                    <TextView
                        android:id="@+id/txt_family_initial"
                        android:text="D"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">


                <TextView
                    android:id="@+id/txt_family_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h_medium"
                    android:maxLines="1"
                    android:lineSpacingExtra="@dimen/h_medium_l"
                    android:textColor="@color/white"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/h_medium"
                    android:lineSpacingExtra="@dimen/h_medium_l"
                    android:layout_below="@+id/txt_family_name"
                    android:textColor="@color/white"
                    android:text="Family"
                    tools:ignore="ObsoleteLayoutParam" />
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_home"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.1"
            android:background="@color/tab_bg_color"
            android:layout_height="@dimen/actionbar_height">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <ImageView
                    android:id="@+id/img_tab_home"
                    android:padding="5dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_home"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_tab_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/body"
                android:lineSpacingExtra="@dimen/body_l"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:text="Home"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/lin_experiences"
            android:layout_weight="1.1"
            android:layout_height="@dimen/actionbar_height">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <ImageView
                    android:id="@+id/img_tab_experinces"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="@dimen/title_text_size"
                    android:padding="8dp"
                    app:srcCompat="@drawable/experience_icon"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_tab_experince"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/body"
                android:lineSpacingExtra="@dimen/body_l"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:text="Experiences"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/lin_elements"
            android:layout_weight="1.1"
            android:layout_height="@dimen/actionbar_height">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <ImageView
                    android:id="@+id/img_tab_elements"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="@dimen/title_text_size"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_elements"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_tab_elements"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/body"
                android:lineSpacingExtra="@dimen/body_l"
                android:textColor="@color/white"
                android:text="Elements"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/lin_discover"
            android:layout_weight="1.1"
            android:layout_height="@dimen/actionbar_height">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <ImageView
                    android:id="@+id/img_tab_discover"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="@dimen/title_text_size"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_discover"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_tab_discover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/body"
                android:lineSpacingExtra="@dimen/body_l"
                android:text="Discover"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/lin_climate"
            android:layout_weight="1.1"
            android:layout_height="@dimen/actionbar_height">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <ImageView
                    android:id="@+id/img_tab_climate"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="@dimen/title_text_size"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_climate_grey"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_tab_climate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/body"
                android:lineSpacingExtra="@dimen/body_l"
                android:text="Climate"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="9.8"
            android:layout_height="@dimen/actionbar_height"/>
    </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_whole_home_light"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.1"
            android:background="#010A1E"
            android:layout_height="@dimen/actionbar_height">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <ImageView
                    android:id="@+id/img_whole_home_light"
                    android:padding="5dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_bulb_white"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_whole_home_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/body"
                android:lineSpacingExtra="@dimen/body_l"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:text=""/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/fragment_bg_color"
        android:layout_height="match_parent">

        <ProgressBar
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/white"
            android:background="@color/transparent"
            android:layout_centerInParent="true"
            android:id="@+id/circular_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"

            tools:targetApi="lollipop" />
        <TextView
            android:layout_below="@+id/circular_progress_bar"
            android:textSize="@dimen/title_text_size"
            android:background="@color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Wait..."/>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frm_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"></FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">





    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#0e0c37"
        android:visibility="gone"
        android:fitsSystemWindows="true"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/activity_main_drawer"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#0B0D25"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark">





                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_filters"
                        android:layout_width="match_parent"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_height="@dimen/actionbar_height"
                        android:text="Filters"/>

                    <TextView
                        android:id="@+id/txt_discover"
                        android:layout_width="match_parent"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_height="@dimen/actionbar_height"
                        android:text="Discover"/>
                    <TextView
                        android:id="@+id/txt_setting"
                        android:layout_width="match_parent"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_height="@dimen/actionbar_height"
                        android:text="Settings"/>
                    <TextView
                        android:id="@+id/txt_supports"
                        android:layout_width="match_parent"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_height="@dimen/actionbar_height"
                        android:text="Supports"/>
                    <TextView
                        android:id="@+id/txt_privacy"
                        android:layout_width="match_parent"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_height="@dimen/actionbar_height"
                        android:text="Privacy"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:clickable="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="@dimen/img_width_height"
                        android:layout_height="70dp"
                        android:src="@drawable/darwin_logo_green"
                        />
                </RelativeLayout>



            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.NavigationView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bottom_menu_bar"
        android:weightSum="4"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/lin_favorites"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="NestedWeights">
                <ImageView
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="@dimen/title_text_size"
                    app:srcCompat="@drawable/favorite"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Favorites"/>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</LinearLayout>
