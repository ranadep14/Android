<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_prog"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/circular_progress_bar"
            android:layout_width="@dimen/setting_item_size"
            android:layout_height="@dimen/setting_item_size"
            android:layout_marginTop="30dp"
            android:indeterminate="false"
            android:layout_centerInParent="true"
            tools:ignore="ObsoleteLayoutParam" />
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="@dimen/title_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wait....."/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/customise_sub_action_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:paddingRight="@dimen/actionbar_height"
        android:paddingLeft="@dimen/actionbar_height"

        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/lin_main">

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Water Filter"
                style="@style/AppTheme" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/divider"/>


            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Notification Name"
                style="@style/AppTheme" />

            <EditText
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="Replace Water Filter"
                android:textSize="@dimen/all_text_size"
                android:id="@+id/edt_replace_water"
                tools:targetApi="lollipop" />



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:weightSum="2"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        style="@style/AppTheme"
                        android:layout_weight="1"
                        android:text="Device"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        style="@style/AppTheme"
                        android:layout_marginTop="5dp"
                        android:text="Water Filter"
                        android:layout_weight="1"
                        android:paddingBottom="10dp" />


                </LinearLayout>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/divider"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/lyt_sonosadd"
                android:weightSum="2"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/lin_zone"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        style="@style/AppTheme"
                        android:layout_weight="1"
                        android:text="Assigned to Zone"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_text_size"
                        android:id="@+id/txt_zone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        style="@style/AppTheme"
                        android:layout_marginTop="5dp"
                        android:text="Whole Room"
                        android:layout_weight="1"
                        android:paddingBottom="10dp" />


                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/divider"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="10dp"
                android:weightSum="2"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        style="@style/AppTheme"
                        android:layout_weight="1"
                        android:text="Notification"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="@dimen/all_text_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        style="@style/AppTheme"
                        android:layout_marginTop="5dp"
                        android:text="Filter Life &lt;= 2 Weeks"
                        android:layout_weight="1"
                        android:paddingBottom="10dp" />


                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/divider"/>


            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Notify"
                style="@style/AppTheme"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_notifer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                style="@style/mySpinnerItemStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:entries="@array/notify_name"
                android:prompt="@string/notifier_title"
                android:textSize="@dimen/all_text_size"
                tools:targetApi="lollipop" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/divider"/>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</RelativeLayout>