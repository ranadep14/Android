<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_height="@dimen/actionbar_height"
    >
    <RelativeLayout
        android:paddingRight="@dimen/actionbar_height"
        android:paddingLeft="@dimen/actionbar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="-15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/transparent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/icon_height_size"
            android:layout_height="@dimen/icon_height_size"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@null"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_left_white"
            android:text="" />

        <TextView
            android:id="@+id/txt_fragment_title"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/all_text_size"
            android:maxLines="1"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Back"/>

        <TextView
            android:id="@+id/txt_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/all_text_size"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="end|right"/>

        <Switch
            style="@style/SCBSwitch"
            android:checked="true"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="end|right"
            android:layout_weight="0"/>
    </LinearLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <include  layout="@layout/line_divider"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
