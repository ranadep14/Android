<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel_main"
    android:background="@color/installation_trans_color"
    tools:context="com.cloudsinc.welltekmobile.native_v2_welltek.activities.Demo_scene_popup">
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="500dp"
        android:orientation="vertical"
        android:layout_height="250dp"
        tools:ignore="UselessParent">
        <include layout="@layout/custom_darwin_loading_layout"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Currently your demo scene is active. \n Please wait."
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/heading_text_size"
            />
    </LinearLayout>
</RelativeLayout>

