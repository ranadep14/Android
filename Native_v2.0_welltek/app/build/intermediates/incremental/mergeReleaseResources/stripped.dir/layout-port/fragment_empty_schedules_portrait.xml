<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_back_color">


    <LinearLayout
        android:weightSum="560"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_weight="60"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="bottom"
                android:id="@+id/lyt_days_next"
                android:weightSum="3"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thursday"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:id="@+id/prev_day"
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:id="@+id/current_day"
                    android:textSize="@dimen/all_text_size"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saturday"
                    android:layout_weight="1"
                    android:id="@+id/next_day"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="205"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="UselessLeaf">

        </LinearLayout>


        <LinearLayout
            android:layout_weight="165"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lyt11"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="It looks like you don't have any \n  exprirences scheduled."
                    android:layout_weight="1"
                    android:id="@+id/txt_help1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size_portrait"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I can help with that."
                    android:id="@+id/txt_help2"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size_portrait"/>

            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lyt_dawn_added">
            <ListView
                android:visibility="visible"
                android:id="@+id/lst_sim"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:visibility="visible"
                android:id="@+id/lst_sleep"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="130"
            android:weightSum="100"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <LinearLayout
                android:layout_weight="45"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal"
                tools:ignore="NestedWeights">
                <Button
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:id="@+id/btn_add_wake"
                    android:background="@drawable/btn_border"
                    android:text="Set Wake"
                    android:visibility="visible"
                    android:textAllCaps="false"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:textSize="@dimen/all_text_size_portrait"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="55"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:id="@+id/btn_add_sleep"
                    android:background="@drawable/btn_border"
                    android:text="Set Sleep"
                    android:visibility="visible"
                    android:textAllCaps="false"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:textSize="@dimen/all_text_size_portrait"
                    android:textColor="@color/white"/>
            </LinearLayout>


        </LinearLayout>



  </LinearLayout>



<!--
    dummy landscape ids
-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- #####-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/temp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:ignore="ObsoleteLayoutParam,UseCompoundDrawables,UselessParent">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:src="@drawable/ic_bedroom_type" />
                <TextView
                    android:id="@+id/txt_room_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Master Bedroom"
                    android:textSize="@dimen/heading_text_size"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>







        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="40dp"
                android:visibility="visible"
                android:id="@+id/lyt_dawn_added1"
                android:baselineAligned="false"
                tools:ignore="UselessParent">

                <ListView
                    android:visibility="visible"
                    android:id="@+id/lst_sim1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ListView
                    android:visibility="visible"
                    android:id="@+id/lst_sleep1"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:id="@+id/lyt111"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        tools:ignore="ObsoleteLayoutParam">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="It looks like you don't have any \n  exprirences scheduled."
            android:layout_weight="1"
            android:id="@+id/txt_help11"
            android:layout_above="@+id/txt_help2"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/all_text_size"
            tools:ignore="NestedWeights,ObsoleteLayoutParam" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I can help with that."
            android:id="@+id/txt_help21"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"

            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/all_text_size"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/lyt"
            android:layout_below="@+id/lyt11"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            tools:ignore="ObsoleteLayoutParam">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_add_wake1"
                android:background="@drawable/btn_border"
                android:text="Set Wake"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:visibility="visible"
                android:textAllCaps="false"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:textSize="@dimen/all_text_size"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btn_add_sleep1"
                android:background="@drawable/btn_border"
                android:text="Set Sleep"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:visibility="visible"
                android:textAllCaps="false"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:textSize="@dimen/all_text_size"
                android:textColor="@color/white"
                tools:ignore="ObsoleteLayoutParam" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>