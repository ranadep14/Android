<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="60dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/tab_bg_color"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <ImageView
            android:padding="10dp"
            android:id="@+id/img_back"
            android:layout_width="@dimen/icon_height_size"
            android:layout_height="@dimen/icon_height_size"
            app:srcCompat="@drawable/ic_left_white"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text=""/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:id="@+id/txt_fragment_title"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textSize="@dimen/all_text_size_item_heading"
            android:maxLines="1"
            android:textColor="@color/white"
            android:text="Back"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_save"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="@dimen/all_text_size_item_heading"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="end|right"/>

        <Switch
            style="@style/SCBSwitch"
            android:checked="true"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="end|right"
            android:layout_weight="0"/>
    </LinearLayout>

</LinearLayout>
