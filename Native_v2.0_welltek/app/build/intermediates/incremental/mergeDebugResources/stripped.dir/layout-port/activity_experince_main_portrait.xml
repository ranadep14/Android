<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloudsinc.welltekmobile.native_v2_welltek.activities.MainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="60dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/tab_bg_color"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <ImageView
                android:padding="10dp"
                android:id="@+id/img_back"
                android:layout_width="@dimen/icon_height_size"
                android:layout_height="@dimen/icon_height_size"
                app:srcCompat="@drawable/down_white"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:text=""/>


            <TextView
                android:id="@+id/txt_fragment_title"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/all_text_size_item_heading"
                android:maxLines="1"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Back"/>

            <TextView
                android:id="@+id/txt_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Save"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/all_text_size"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="end|right"/>

            <Switch
                style="@style/SCBSwitch"
                android:checked="true"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="end|right"
                android:layout_weight="0"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/experience_tabs"
        android:background="@color/tab_bg_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_size"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/lyt_rel_act"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/all_text_size"
                    android:textColor="@color/white"
                    android:text="Activities"/>
                <View
                    android:id="@+id/view_exp_select"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/dialer_color"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/lyt_rel_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/all_text_size"
                    android:textColor="@color/white"
                    android:text="Schedules"/>
                <View
                    android:id="@+id/view_schedule_select"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/tab_bg_color"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/frm_expriencesmain_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>
