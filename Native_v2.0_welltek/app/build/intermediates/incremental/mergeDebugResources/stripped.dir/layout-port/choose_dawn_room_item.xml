<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/lin_room"
    android:layout_height="wrap_content">
<!--
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="300dp">-->
   <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
              android:weightSum="4"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_masterbedroom"
            android:gravity="top"
       tools:ignore="ObsoleteLayoutParam,UselessParent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_alignParentTop="true"
                android:visibility="gone"
                app:srcCompat="@drawable/bed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_title"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Master Bedroom"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="@dimen/ch3"
                android:layout_weight="0.1"
                android:lineSpacingExtra="@dimen/ch3l"
                android:layout_marginLeft="15dp"
                tools:ignore="ObsoleteLayoutParam" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/no_text"
                android:layout_weight="0.1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/txt_title"
                android:textSize="@dimen/body"
                android:gravity="left"
                android:textColor="@color/off_white_text"
                android:text="No Schedules"
                tools:ignore="ObsoleteLayoutParam" />
       <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="visible"
                android:layout_above="@+id/btn_add"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:layout_weight="1.9"
                android:layout_below="@+id/txt_title"
                android:divider="@color/transparent"
                android:id="@+id/allsimulationsList"
           tools:ignore="ObsoleteLayoutParam" />
           <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:text="Add"
               android:layout_marginTop="10dp"
               android:layout_weight="0.4"
               android:textSize="@dimen/body"
               android:layout_marginBottom="30dp"
               android:lineSpacingExtra="@dimen/body_l"
                android:textAllCaps="false"
               android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:id="@+id/btn_add"
                android:background="@drawable/btn_border_white"
                android:gravity="center"
               tools:ignore="ObsoleteLayoutParam" />
            <TextView android:layout_width="wrap_content"
                android:paddingLeft="25dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/txt_id"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>


<!--</ScrollView>-->


</LinearLayout>

