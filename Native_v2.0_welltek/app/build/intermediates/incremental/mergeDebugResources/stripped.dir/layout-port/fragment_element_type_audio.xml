<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color">


    <LinearLayout
        android:weightSum="560"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_weight="290"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="1"
                android:weightSum="360"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:layout_weight="72"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    tools:ignore="NestedWeights">
                    <ImageView
                        app:srcCompat="@drawable/ic_sea_water"
                        android:layout_width="@dimen/days_icon_height_size_portrait"
                        android:layout_height="@dimen/days_icon_height_size_portrait" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="288"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="99"
                        android:weightSum="287"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_weight="227"
                            android:layout_width="0dp"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            tools:ignore="NestedWeights">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:singleLine="true"
                                android:maxEms="10"
                                android:textSize="@dimen/all_text_size_portrait"
                                android:text="Waves"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="60"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:padding="4dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:visibility="visible"
                                android:background="@drawable/music_button_selector_white"
                                app:srcCompat="@drawable/ic_playlist_white"
                                tools:ignore="ObsoleteLayoutParam" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/divider_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="360"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_weight="72"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        app:srcCompat="@drawable/ic_waterfall"
                        android:layout_width="@dimen/days_icon_height_size_portrait"
                        android:layout_height="@dimen/days_icon_height_size_portrait" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="288"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="99"
                        android:weightSum="287"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:baselineAligned="false"
                        tools:ignore="NestedWeights">
                        <LinearLayout
                            android:layout_weight="227"
                            android:layout_width="0dp"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            tools:ignore="NestedWeights">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:singleLine="true"
                                android:maxEms="10"
                                android:textSize="@dimen/all_text_size_portrait"
                                android:text="Waterfall"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="60"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:padding="4dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:visibility="visible"
                                android:background="@drawable/music_button_selector_white"
                                app:srcCompat="@drawable/ic_playlist_white"
                                tools:ignore="ObsoleteLayoutParam" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/divider_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="360"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_weight="72"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        app:srcCompat="@drawable/ic_cloud_with_rain"
                        android:layout_width="@dimen/days_icon_height_size_portrait"
                        android:layout_height="@dimen/days_icon_height_size_portrait" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="288"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="99"
                        android:weightSum="287"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:baselineAligned="false"
                        tools:ignore="NestedWeights">
                        <LinearLayout
                            android:layout_weight="227"
                            android:layout_width="0dp"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            tools:ignore="NestedWeights">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:singleLine="true"
                                android:maxEms="10"
                                android:textSize="@dimen/all_text_size_portrait"
                                android:text="Rain"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="60"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:padding="4dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:visibility="visible"
                                android:background="@drawable/music_button_selector_white"
                                app:srcCompat="@drawable/ic_playlist_white"
                                tools:ignore="ObsoleteLayoutParam" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/divider_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="360"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_weight="72"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        app:srcCompat="@drawable/ic_tree"
                        android:layout_width="@dimen/days_icon_height_size_portrait"
                        android:layout_height="@dimen/days_icon_height_size_portrait" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="288"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="99"
                        android:weightSum="287"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:baselineAligned="false"
                        tools:ignore="NestedWeights">
                        <LinearLayout
                            android:layout_weight="227"
                            android:layout_width="0dp"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            tools:ignore="NestedWeights">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:singleLine="true"
                                android:maxEms="10"
                                android:textSize="@dimen/all_text_size_portrait"
                                android:text="Waves"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="60"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:padding="4dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:visibility="visible"
                                android:background="@drawable/music_button_selector_white"
                                app:srcCompat="@drawable/ic_playlist_white"
                                tools:ignore="ObsoleteLayoutParam" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/divider_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"></LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_weight="270"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <FrameLayout
                android:layout_weight="20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>
            </FrameLayout>

            <FrameLayout
                android:visibility="visible"
                android:layout_weight="80"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="360"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            app:srcCompat="@drawable/ic_arrow_white"
                            android:rotation="180"
                            android:padding="10dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="130"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_music_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_text_size"
                            android:singleLine="true"
                            android:ems="20"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:text="Song title goes here"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/white_dot"
                            android:layout_width="8dp"
                            android:layout_height="8dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="110"
                        android:layout_width="0dp"
                        android:gravity="center|left"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:id="@+id/txt_muisc_artist_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/all_text_size"
                            android:singleLine="true"
                            android:text="Artist Name"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="60"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:padding="5dp"
                            android:id="@+id/img_music_play_pause"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:visibility="visible"
                            android:background="@drawable/music_button_selector_white"
                            app:srcCompat="@drawable/ic_playlist_white"/>
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>