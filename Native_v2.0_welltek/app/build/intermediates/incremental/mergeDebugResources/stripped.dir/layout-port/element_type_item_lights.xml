<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_bg_color">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_id"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_type"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_indiactor"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_circadian"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_eng"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_relax"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lay_group"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/lin_light"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="360"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_weight="55"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:baselineAligned="false">
            <LinearLayout
                android:weightSum="99"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:layout_weight="46"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights">
                    <ImageView
                        android:id="@+id/img_add_fav"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/heart_outline_pink"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="52"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="UselessLeaf"></LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="UselessLeaf"></LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="UselessLeaf"></LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="99"
            android:layout_weight="305"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="305"
                android:layout_weight="76"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:baselineAligned="false"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:layout_weight="197"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:weightSum="76"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights">
                    <LinearLayout
                        android:layout_weight="38"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        tools:ignore="NestedWeights">
                    <TextView
                        android:gravity="left"
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:maxEms="10"
                        android:textSize="@dimen/all_text_size_portrait"
                        android:text="Bedside Lamps"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="38"
                        android:gravity="top|left"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:layout_marginTop="2dp"
                            android:gravity="left"
                            android:id="@+id/txt_room_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:maxEms="10"
                            android:textSize="@dimen/all_text_size"
                            android:text="Master Bedroom"
                           />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="72"
                    android:weightSum="76"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_weight="46"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <Switch
                            android:id="@+id/light_on_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Switch
                            android:id="@+id/group_on_off"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="30"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        tools:ignore="UselessLeaf"></LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="36"
                    android:layout_width="0dp"
                    android:weightSum="76"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_weight="46"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <ImageView
                            android:id="@+id/img_option"
                            android:padding="10dp"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_more"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="30"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        tools:ignore="UselessLeaf"></LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="22"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <SeekBar
                    android:id="@+id/seek_light_brightness"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"/>
                <SeekBar
                    android:visibility="gone"
                    android:id="@+id/seek_group_brightness"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4">

                </SeekBar>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/divider_color"></LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>