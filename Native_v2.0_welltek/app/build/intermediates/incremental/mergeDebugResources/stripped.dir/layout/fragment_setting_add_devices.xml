<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color"
    android:orientation="vertical">
    <include layout="@layout/customise_sub_action_bar"/>
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">



        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Device Type:"
            android:textSize="@dimen/title_text_size"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@color/divider"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="15dp"

            android:id="@+id/lyt_sonosadd"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/lin_air_filter"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="SONOS"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="AUDIO DEVICES"
                    android:layout_weight="1"
                    android:paddingBottom="10dp" />


            </LinearLayout>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/right_white"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@color/divider"/>




        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="15dp"
            android:id="@+id/lyt_smartfilter"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/lin_water_filter"
                android:padding="0dp"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/all_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="AIR SMART FILTER"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/all_text_size"
                    android:text="AIR FILTER"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"
                    />


            </LinearLayout>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/right_white"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@color/divider"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </ListView>
    </LinearLayout>


</LinearLayout>
