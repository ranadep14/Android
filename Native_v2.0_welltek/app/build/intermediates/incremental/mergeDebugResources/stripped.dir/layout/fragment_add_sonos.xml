        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="SONOS Found!"
            android:textColor="@color/white"
            style="@style/AppTheme" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@color/divider"/>


        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Device Name"
            style="@style/AppTheme" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="Enter Device Name"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            android:id="@+id/txt_sonos_device_name"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@color/divider"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="10dp"
            android:id="@+id/lyt_sonosadd"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lin_room"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    style="@style/AppTheme"
                    android:layout_weight="1"
                    android:text="Assigned to Room"
                    />
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/txt_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"
                    android:text="please select room to be assigned"
                    android:layout_weight="1"
                    android:paddingBottom="10dp" />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/right_white"/>
            </RelativeLayout>

