<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/inistial_bg_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true"
        tools:ignore="UselessParent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="@dimen/back_height_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/left"/>
            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:text="Log out"
                android:textAllCaps="false"
                android:textSize="@dimen/all_text_size"
                android:textColor="@color/actionbar_back"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/actionbar_back"
                android:text="sdvssvsb"/>


            <Spinner
                android:textSize="@dimen/all_text_size"
                android:id="@+id/spn_hub_msg"
                android:background="@drawable/edittext_user_line_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_size"
                android:imeOptions="actionDone"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Hub Id"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:inputType="textVisiblePassword"
                android:maxLines="1"
                />



            <Button
                android:id="@+id/btn_hub_connect"
                android:text="Connect"
                android:textColor="#FFF5FE"
                android:layout_width="@dimen/app_bar_height"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_style"
                android:textAllCaps="false"
                android:textSize="@dimen/all_text_size"
                android:layout_marginTop="@dimen/actionbar_height"
                android:clickable="false"
                android:focusable="false"
                android:layout_gravity="center_horizontal"
                />




        </LinearLayout>
        <ImageView
            android:id="@+id/img_login_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:src="@drawable/btn_border"/>
    </RelativeLayout>
</RelativeLayout>