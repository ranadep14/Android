<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#192B4F"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_size"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/lyt_rel_favorites_exp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/all_text_size"
                    android:textColor="@color/white"
                    android:text="Favorites"/>
                <View
                    android:id="@+id/view_fav_select"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="80dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="5dp"
                    android:background="@color/fragment_back_color"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/lyt_rel_all_exp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/all_text_size"
                    android:textColor="@color/white"
                    android:text=" All "/>
                <View
                    android:id="@+id/view_allexp_select"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="5dp"
                    android:background="@color/fragment_back_color"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <!-- ############ -->

    <!--#############-->
    <FrameLayout
        android:id="@+id/frm_all_exprience_container"
        android:layout_width="match_parent"
        android:background="@color/fragment_back_color"
        android:layout_height="match_parent">

        <!--<FrameLayout
            android:id="@+id/frm_sub_expr_container"
            android:layout_width="match_parent"
            android:background="@color/fragment_back_color"
            android:layout_height="match_parent">


        </FrameLayout>-->

    </FrameLayout>



</LinearLayout>
