<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_light"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_item_size"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/fragment_bg_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/txt_id"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:id="@+id/txt_room_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <com.lnikkila.extendedtouchview.ExtendedTouchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:touchHeight="@dimen/setting_item_size"
                app:touchWidth="@dimen/ch1">
            <ImageView
                android:id="@+id/img_add_fav"
                android:layout_width="@dimen/icon_height_size"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_heart_fill"/>
            </com.lnikkila.extendedtouchview.ExtendedTouchView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
            <TextView
                android:id="@+id/txt_device_title"
                android:layout_width="100dp"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/all_text_size"
                android:text="Audio"/>

                </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_album_image"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/lin_title_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.5"
                tools:ignore="NestedWeights">
                <TextView

                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:id="@+id/txt_music_title"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:gravity="center|bottom"
                    android:text="Song Title"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="11dp"
                    android:textColor="@color/white"
                    android:id="@+id/txt_muisc_artist_name"
                    android:text="Artist Name"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:baselineAligned="false">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lin_no_playlist"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                tools:ignore="NestedWeights">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights,UselessParent">

                    <Button
                        android:padding="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/btn_load_playlist"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_border"
                        android:text="Load Playlist"/>
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_music_bottom"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights">
                        <ImageView
                            android:padding="4dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/img_music_shuffule"
                            android:layout_width="@dimen/icon_height_size"
                            android:layout_height="@dimen/icon_height_size"
                            android:background="@drawable/music_button_selector_white"
                            app:srcCompat="@drawable/shuffle_new"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.lnikkila.extendedtouchview.ExtendedTouchView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:touchHeight="@dimen/setting_item_size"
                            app:touchWidth="@dimen/ch1">
                        <ImageView
                            android:padding="8dp"
                            android:id="@+id/img_music_prev"
                            android:layout_width="@dimen/icon_height_size"
                            android:layout_height="@dimen/icon_height_size"
                            android:background="@drawable/music_button_selector_white"
                            app:srcCompat="@drawable/ic_music_previous"/>
                        </com.lnikkila.extendedtouchview.ExtendedTouchView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.lnikkila.extendedtouchview.ExtendedTouchView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:touchHeight="@dimen/setting_item_size"
                            app:touchWidth="@dimen/ch1">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/img_music_play_pause"
                            android:layout_width="@dimen/icon_height_size"
                            android:layout_height="@dimen/icon_height_size"
                            android:background="@drawable/music_button_selector_white"
                            app:srcCompat="@drawable/ic_playlist"/>
                        </com.lnikkila.extendedtouchview.ExtendedTouchView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.lnikkila.extendedtouchview.ExtendedTouchView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:touchHeight="@dimen/setting_item_size"
                            app:touchWidth="@dimen/ch1">
                        <ImageView
                            android:padding="8dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/img_music_next"
                            android:layout_width="@dimen/icon_height_size"
                            android:layout_height="@dimen/icon_height_size"
                            android:background="@drawable/music_button_selector_white"
                            app:srcCompat="@drawable/ic_music_next_blue"/>
                        </com.lnikkila.extendedtouchview.ExtendedTouchView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:padding="4dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/img_music_repeat"
                            android:layout_width="@dimen/icon_height_size"
                            android:layout_height="@dimen/icon_height_size"
                            android:background="@drawable/music_button_selector_white"
                            app:srcCompat="@drawable/ic_repeat"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.lnikkila.extendedtouchview.ExtendedTouchView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:touchHeight="@dimen/setting_item_size"
                            app:touchWidth="@dimen/ch1">
                        <ImageView
                            android:padding="4dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/img_playlist"
                            android:layout_width="@dimen/icon_height_size"
                            android:layout_height="@dimen/icon_height_size"
                            android:background="@drawable/music_button_selector_white"
                            app:srcCompat="@drawable/ic_playlist_default"/>
                        </com.lnikkila.extendedtouchview.ExtendedTouchView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:padding="4dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/img_music_mute"
                            android:layout_width="@dimen/icon_height_size"
                            android:layout_height="@dimen/icon_height_size"
                            android:background="@drawable/music_button_selector_white"
                            app:srcCompat="@drawable/ic_mute"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_weight="4.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="NestedWeights">
                        <ImageView
                            android:padding="10dp"
                            android:layout_weight="4.5"
                            app:srcCompat="@drawable/ic_volumedownmusic"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/icon_height_size"
                            android:layout_height="@dimen/icon_height_size"
                            tools:ignore="ObsoleteLayoutParam" />
                    </RelativeLayout>
                    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seek_music_vol"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        app:dsb_min="0"
                        app:dsb_max="100"
                        app:dsb_thumbSize="@dimen/all_text_size"
                        app:dsb_progressColor="@color/actionbar_back"
                        app:dsb_indicatorColor="@color/white"
                        app:dsb_indicatorTextAppearance="@color/white"
                        app:dsb_rippleColor="@color/actionbar_back"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:layout_weight="4.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:padding="10dp"
                            android:layout_weight="4.5"
                            app:srcCompat="@drawable/ic_volumeupmusic"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/icon_height_size"
                            android:layout_height="@dimen/icon_height_size"
                            tools:ignore="ObsoleteLayoutParam" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/icon_height_size">
        <View
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_color"/>

    </RelativeLayout>

</RelativeLayout>