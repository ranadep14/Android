                    android:id="@+id/nptp_text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    style="@style/NPTP_numberpad_textStyle"

                    />
            </LinearLayout>
        </LinearLayout>

