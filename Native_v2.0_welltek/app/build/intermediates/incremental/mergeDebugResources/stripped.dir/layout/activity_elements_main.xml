<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloudsinc.welltekmobile.native_v2_welltek.activities.MainActivity">
<LinearLayout
    android:background="@color/tab_bg_color"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_item_size"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel_fav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/txt_fav_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/body"
                android:lineSpacingExtra="@dimen/body_l"
                android:textColor="@color/white"
                android:text="@string/favorites_text"/>
            <View
                android:id="@+id/view_fav_select"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/dialer_color"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel_rooms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/txt_room_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/all_text_size"
                android:textColor="@color/light_white"
                android:text="Rooms"/>
            <View
                android:id="@+id/view_rooms_select"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/tab_bg_color"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel_types"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/txt_type_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/body"
                android:lineSpacingExtra="@dimen/body_l"
                android:textColor="@color/white"
                android:text="Types"/>
            <View
                android:id="@+id/view_type_select"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/tab_bg_color"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
    <FrameLayout
        android:id="@+id/frm_elemenmain_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
