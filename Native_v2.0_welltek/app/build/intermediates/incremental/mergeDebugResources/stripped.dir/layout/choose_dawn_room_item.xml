<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/lin_room"
    android:layout_height="wrap_content">


    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:background="@drawable/bg_masterbedroom"


            android:gravity="center_vertical"
            tools:ignore="UselessParent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/bed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:gravity="center_horizontal"
                android:text="R1"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="@dimen/ch3"
                android:lineSpacingExtra="@dimen/ch3l"
                android:layout_marginLeft="10dp"
               />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/no_text"
                android:textSize="@dimen/body"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txt_title"
                android:gravity="center_horizontal"
                android:textColor="@color/off_white_text"
                android:text="No Schedules"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:divider="@color/transparent"
                android:paddingLeft="30dp"
                android:layout_below="@+id/txt_title"
                android:visibility="gone"
                android:overScrollMode="never"
                android:layout_centerInParent="true"
                android:paddingRight="30dp"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:id="@+id/allsimulationsList"/>
           <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:text="Add"
               android:textSize="@dimen/body"
               android:lineSpacingExtra="@dimen/body_l"
                android:textAllCaps="false"
                android:layout_marginBottom="30dp"
               android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:id="@+id/btn_add"
                android:background="@drawable/btn_border_white"
                android:gravity="center"/>
            <TextView android:layout_width="wrap_content"
                android:paddingLeft="25dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/txt_id"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>




    </RelativeLayout>

</LinearLayout>

