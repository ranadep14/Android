<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lytmainfont"
    android:background="@drawable/bg_masterbedroom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:weightSum="10">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/back"
                android:padding="5dp"
                android:visibility="gone"
                android:src="@drawable/ic_left_white"
                android:layout_weight="4.2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Delete"
                android:id="@+id/img_delete"
                android:textSize="@dimen/body"
                android:lineSpacingExtra="@dimen/h_medium_l"
                android:textColor="@color/red_delete"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body"                 android:lineSpacingExtra="@dimen/h_medium_l"
                android:visibility="invisible"
                android:text="Customise Your Wake Up Routine"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="left"/>
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_marginRight="300dp"/>

        </LinearLayout>

        <View
            android:layout_width="50dp"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:visibility="visible"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wake Time"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_weight="2.1"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:textSize="@dimen/h_medium"
                android:id="@+id/txt_room_title"
                android:lineSpacingExtra="@dimen/h_medium_l"/>
            <TextView
                android:background="@null"
                android:id="@+id/Timepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingTop="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_weight="0"
                android:editable="false"
                android:visibility="visible"
                android:backgroundTint="@android:color/white"
                android:gravity="right"
                android:textSize="@dimen/ch3"
                android:lineSpacingExtra="@dimen/ch2l"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0.5dp"
            android:background="#80ffffff"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Days"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="@dimen/h_medium"
                android:lineSpacingExtra="@dimen/h_medium_l"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:baselineAligned="false">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/txt_mon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/white"
                            android:background="@drawable/grey_border_blue"
                            android:textSize="@dimen/body"
                            android:lineSpacingExtra="@dimen/h_medium_l"
                            android:text="M"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Mon"
                            android:id="@+id/lbl_mon"
                            android:visibility="gone"
                            android:gravity="right"
                            android:layout_marginTop="5dp"
                            android:paddingRight="10dp"
                            android:layout_below="@+id/txt_mon"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/txt_tue"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/white"
                            android:background="@drawable/grey_border_blue"
                            android:textSize="@dimen/body"                 android:lineSpacingExtra="@dimen/h_medium_l"
                            android:text="T"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Tue"
                            android:id="@+id/lbl_tue"
                            android:visibility="gone"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/txt_tue"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/txt_wen"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/white"
                            android:background="@drawable/grey_border_blue"
                            android:textSize="@dimen/body"                 android:lineSpacingExtra="@dimen/h_medium_l"
                            android:text="W"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Wed"
                            android:id="@+id/lbl_wed"
                            android:visibility="gone"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/txt_wen"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/txt_thu"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/white"
                            android:background="@drawable/grey_border_blue"
                            android:textSize="@dimen/body"                 android:lineSpacingExtra="@dimen/h_medium_l"
                            android:text="T"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Thu"
                            android:id="@+id/lbl_thu"
                            android:visibility="gone"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/txt_thu"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/txt_fri"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/white"
                            android:background="@drawable/grey_border_blue"
                            android:textSize="@dimen/body"                 android:lineSpacingExtra="@dimen/h_medium_l"
                            android:text="F"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Fri"
                            android:id="@+id/lbl_fri"
                            android:visibility="gone"
                            android:paddingLeft="8dp"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:paddingRight="10dp"
                            android:layout_below="@+id/txt_fri"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/txt_sat"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/white"
                            android:background="@drawable/grey_border_blue"
                            android:textSize="@dimen/body"                 android:lineSpacingExtra="@dimen/h_medium_l"
                            android:text="S"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Sat"
                            android:id="@+id/lbl_sat"
                            android:gravity="center_horizontal"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/txt_sat"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/txt_sun"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/white"
                            android:background="@drawable/grey_border_blue"
                            android:textSize="@dimen/body"                 android:lineSpacingExtra="@dimen/h_medium_l"
                            android:text="S"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lbl_sun"
                            android:textColor="@color/white"
                            android:text="Sun"
                            android:visibility="gone"
                            android:paddingLeft="5dp"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/txt_sun"/>

                    </RelativeLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_repeat"
                    android:textColor="@color/off_white_text"
                    android:text="Non-Repeating"
                    android:visibility="visible"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:layout_below="@+id/txt_sun"/>
            </LinearLayout>




        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0.5dp"
            android:background="#80ffffff"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elements"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_weight="1.2"
                android:gravity="left"
                android:textSize="@dimen/h_medium"
                android:lineSpacingExtra="@dimen/h_medium_l"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginTop="20dp"

                android:baselineAligned="false">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:visibility="invisible"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_elem1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/white"
                        android:background="@drawable/grey_border_blue"
                        android:textSize="@dimen/body"                 android:lineSpacingExtra="@dimen/h_medium_l"
                        android:text="M"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Mon"
                        android:visibility="visible"
                        android:gravity="right"
                        android:layout_marginTop="5dp"
                        android:paddingRight="10dp"
                        android:layout_below="@+id/txt_elem1"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:visibility="invisible"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_elem2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/white"
                        android:background="@drawable/grey_border_blue"
                        android:text="T"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Tue"
                        android:visibility="gone"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:paddingRight="10dp"
                        android:layout_below="@+id/txt_elem2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:visibility="invisible"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_elem3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/white"
                        android:background="@drawable/grey_border_blue"
                        android:text="W"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Wed"
                        android:visibility="gone"
                        android:gravity="right"
                        android:layout_marginTop="5dp"
                        android:paddingRight="10dp"
                        android:layout_below="@+id/txt_elem3"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/txt_elem_lights"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/white"
                        android:background="@drawable/light_new" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Lights"
                        android:gravity="right"
                        android:layout_marginTop="5dp"
                        android:paddingRight="5dp"
                        android:layout_below="@+id/txt_elem_lights"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/txt_elem_blinds"
                        android:layout_width="55dp"
                        android:layout_height="55dp"

                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/blinds_new"/>
                    <TextView
                        android:id="@+id/txt_no_blinds"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/grey_border_blue"
                        android:textSize="@dimen/body"
                        android:visibility="gone"
                        android:lineSpacingExtra="@dimen/h_medium_l"
                        android:text="NA"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Blinds"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txt_elem_blinds"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/txt_elem_audio"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/audio_new"
                        android:textSize="@dimen/body"
                        android:lineSpacingExtra="@dimen/h_medium_l" />
                    <TextView
                        android:id="@+id/txt_no_audio"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/grey_border_blue"
                        android:textSize="@dimen/body"
                        android:visibility="gone"
                        android:lineSpacingExtra="@dimen/h_medium_l"
                        android:text="NA"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Audio"

                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txt_elem_audio"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rel_track"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/txt_elem_tracks"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:background="@drawable/track_new"
                        android:layout_alignParentTop="true"
                        android:textSize="@dimen/body"                 android:lineSpacingExtra="@dimen/h_medium_l" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Track"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:id="@+id/lbl_tracks"
                        android:layout_below="@+id/txt_elem_tracks"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#80ffffff"
            android:layout_gravity="center_horizontal"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_cancel"
            android:background="@drawable/btn_border_white"
            android:text="Cancel"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:textAllCaps="false"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="@dimen/body"
            android:lineSpacingExtra="@dimen/h_medium_l"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_save"
            android:background="@drawable/btn_border_white"
            android:text="Save"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/btn_cancel"
            android:visibility="visible"
            android:textAllCaps="false"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="@dimen/body"
            android:lineSpacingExtra="@dimen/h_medium_l"
            android:textColor="@color/white"/>
    </LinearLayout>

    <Chronometer
        android:visibility="gone"
        android:id="@+id/simpleChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>