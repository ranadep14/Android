<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/inistial_bg_color"

    >






        <RelativeLayout
            android:paddingLeft="@dimen/icon_height_size"
            android:paddingRight="@dimen/icon_height_size"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/inistial_bg_color"
            android:weightSum="5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">
                <LinearLayout
                    android:id="@+id/sign_up_form"
                    android:layout_width="750dp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@color/inistial_bg_color"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">





                    <!--</android.support.design.widget.TextInputLayout>-->

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="15dp"
                        android:id="@+id/edt_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_height_size"
                        android:hint="First Name"
                        android:imeOptions="actionNext"
                        style="@style/AppLogin"
                        android:background="@drawable/edittext_user_line_gray"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:maxLines="1"
                        />
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/validfirtsname"
                        android:text="@string/valid_first_name"
                        android:gravity="center"
                        android:textColor="#c62828"
                        android:visibility="gone"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="15dp"
                        android:id="@+id/edt_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_height_size"
                        android:hint="Last Name"
                        android:imeOptions="actionNext"
                        style="@style/AppLogin"
                        android:background="@drawable/edittext_user_line_gray"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:maxLines="1"
                        />
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/validlastname"
                        android:text="@string/valid_last_name"
                        android:gravity="center"
                        android:textColor="#c62828"
                        android:visibility="gone"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_marginTop="15dp"
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/icon_height_size"
                            style="@style/AppLogin"
                            android:hint="@string/user_id"
                            android:background="@drawable/edittext_user_line_gray"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:maxLines="1"
                            />
                    </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    style="@style/AppLogin"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/icon_height_size"
                    android:text="@string/domain"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/validenmail"
                        android:visibility="gone"
                        android:text=""
                        android:gravity="center"
                        android:textColor="#c62828"
                        />


                    <!-- <android.support.design.widget.TextInputLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textColorHint="@color/actionbar_back"
                         app:passwordToggleEnabled="true"
                         >-->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/white"
                        android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="15dp"
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_height_size"
                        style="@style/AppLogin"
                        android:hint="@string/prompt_password"
                        android:background="@drawable/edittext_user_line_gray"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:maxLines="1"
                        />
                    </android.support.design.widget.TextInputLayout>

                    <!--</android.support.design.widget.TextInputLayout>-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/validpassword"
                        android:textColor="#c62828"
                        android:text=""
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        />

                    <!--<android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/actionbar_back"
                        app:passwordToggleEnabled="true"
                       >-->

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/white"
                        android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="15dp"
                        android:id="@+id/edt_Repeat_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_height_size"
                        android:background="@drawable/edittext_user_line_gray"
                        style="@style/AppLogin"
                        android:hint="Confirm password"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:maxLines="1"
                        />
                    </android.support.design.widget.TextInputLayout>

                    <!-- </android.support.design.widget.TextInputLayout>-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/validRepeatpwd"
                        android:textColor="#c62828"
                        android:text="@string/valid_re_password"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"/>

                    <!-- <android.support.design.widget.TextInputLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textColorHint="@color/actionbar_back"
                         >-->



                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="15dp"
                        android:id="@+id/edt_recovery_email"
                        android:layout_width="match_parent"
                        android:editable="false"
                        android:focusable="false"
                        android:layout_height="@dimen/icon_height_size"
                        android:hint="Recovery Email"
                        android:imeOptions="actionNext"
                        style="@style/AppLogin"
                        android:background="@drawable/edittext_user_line_gray"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:maxLines="1"
                        />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="15dp"
                        android:id="@+id/edt_serial_id"
                        android:layout_width="match_parent"
                        android:editable="false"
                        android:focusable="false"
                        android:layout_height="@dimen/icon_height_size"
                        android:hint="@string/darwin_id"
                        android:imeOptions="actionNext"
                        style="@style/AppLogin"
                        android:background="@drawable/edittext_user_line_gray"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:maxLines="1"
                        />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/validserialid"
                        android:text="@string/valid_serial_name"
                        android:gravity="center"
                        android:textColor="#c62828"
                        android:visibility="gone"/>

                    <!-- </android.support.design.widget.TextInputLayout>-->



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center">




                        <Button
                            android:id="@+id/btn_signUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign Up"
                            android:textSize="14sp"
                            android:paddingLeft="@dimen/activity_vertical_margin"
                            android:textAllCaps="false"
                            android:paddingRight="@dimen/activity_vertical_margin"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/button_background_style"
                            android:textColor="@color/white"
                            tools:ignore="ObsoleteLayoutParam" />
                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Back To Log in"
                            style="@style/AppLogin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:background="@drawable/button_background_style"
                            android:textAllCaps="false"
                            android:paddingLeft="@dimen/activity_vertical_margin"
                            android:paddingRight="@dimen/activity_vertical_margin"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            />



                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>


</RelativeLayout>
