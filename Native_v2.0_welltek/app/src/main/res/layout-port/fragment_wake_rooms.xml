<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_back_color">

    <include layout="@layout/custom_darwin_loading_layout"/>


    <android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
        android:layout_centerVertical="true"
        android:id="@+id/list_add_rooms"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:text="It seems no Bedroom is present to set the Wake and Sleep simulations"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/notext"
        android:layout_centerInParent="true"
        android:textSize="@dimen/h_medium"
        android:gravity="center"
        android:visibility="gone"
        android:layout_gravity="center_vertical"/>

</RelativeLayout>