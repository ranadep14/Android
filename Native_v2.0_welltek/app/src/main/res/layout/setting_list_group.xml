<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:background="@color/fragment_bg_color"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_size"
        tools:ignore="UselessParent">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:id="@+id/listTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_height_size"
            android:textSize="@dimen/all_text_size"
            android:textColor="@color/white"
            android:text="setting"
            android:gravity="center_vertical"
            android:layout_weight="1"
            tools:ignore="ObsoleteLayoutParam" />
        <ImageView
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/icon_height_size"
            android:layout_height="@dimen/icon_height_size"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/setting_group_img"
            app:srcCompat="@drawable/right_white"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_divider"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/line_divider"/>

    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>


