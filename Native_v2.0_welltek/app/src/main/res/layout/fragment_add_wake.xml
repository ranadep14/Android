<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lytmainfont"
    android:background="@color/fragment_back_color">

    <!-- ##### -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:id="@+id/lyt_days_next"
            android:weightSum="3">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/prev_day"
                android:textColor="@color/white"
                android:textSize="@dimen/all_text_size"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:id="@+id/current_day"
                android:textSize="@dimen/all_text_size"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:layout_weight="1"
                android:id="@+id/next_day"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="@dimen/all_text_size"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rel_day_tab"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/days_pager"
                android:layout_width="match_parent"
                android:layout_height="600dp" >

            </android.support.v4.view.ViewPager>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rel_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_no_rooms_available"
                    android:visibility="gone"
                    android:textSize="@dimen/title_text_size"
                    android:textColor="@color/actionbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="No Rooms Available"/>
                <ProgressBar
                    android:id="@+id/circular_progress_bar"
                    android:layout_width="@dimen/setting_item_size"
                    android:layout_height="@dimen/setting_item_size"
                    android:layout_marginTop="30dp"
                    android:indeterminate="false"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/txt_no_devices"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Devices Available"
                    android:textSize="@dimen/title_text_size"
                    android:textColor="@color/actionbar_back"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_room_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:id="@+id/fav_pager"
                    android:layout_width="match_parent"
                    android:layout_height="600dp" >

                </android.support.v4.view.ViewPager>


            </RelativeLayout>
            <!-- -->
            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dots_height"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="ObsoleteLayoutParam">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:visibility="gone"
    android:layout_margin="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/all_text_size"
                android:text="Customise Your Wake Up Routine"
                android:textColor="@color/white"
                android:gravity="center"/>
            <View
            android:layout_width="50dp"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wake Time"
            android:textColor="@color/white"
            android:layout_weight="3"
            android:gravity="left"
            android:textSize="@dimen/all_text_size"
            tools:ignore="NestedWeights" />
        <EditText
            android:background="@null"
            android:id="@+id/Timepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00  am "
            android:textColor="@color/white"
            android:layout_weight="0"
            android:gravity="right"
            android:textSize="30dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="0.5dp"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Days"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="@dimen/all_text_size"
            tools:ignore="NestedWeights" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:baselineAligned="false">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_mon"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue"
                    android:textSize="@dimen/all_text_size"
                    android:text="M"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Mon"
                    android:id="@+id/lbl_mon"
                    android:visibility="visible"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_mon"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_tue"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue"
                    android:text="T"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Tue"
                    android:id="@+id/lbl_tue"
                    android:visibility="gone"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_tue"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_wen"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue"
                    android:text="W"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Wed"
                    android:id="@+id/lbl_wed"
                    android:visibility="gone"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_wen"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_thu"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue"
                    android:text="T"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Thu"
                    android:id="@+id/lbl_thu"
                    android:visibility="gone"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_thu"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_fri"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue"
                    android:text="F"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Fri"
                    android:id="@+id/lbl_fri"
                    android:visibility="gone"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_fri"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_sat"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/grey_border_blue"
                    android:textSize="@dimen/all_text_size"
                    android:text="S"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Sat"
                    android:id="@+id/lbl_sat"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_sat"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_sun"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/grey_border_blue"
                    android:layout_alignParentTop="true"
                    android:textSize="@dimen/all_text_size"
                    android:text="S"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_sun"
                    android:textColor="@color/white"
                    android:text="Sun"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_sun"/>
            </RelativeLayout>





        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="0.5dp"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elements"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="@dimen/all_text_size"
            tools:ignore="NestedWeights" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:baselineAligned="false">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="invisible"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_elem1"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue"
                    android:textSize="@dimen/all_text_size"
                    android:text="M"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Mon"
                    android:visibility="visible"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_elem1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="invisible"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_elem2"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue"
                    android:text="T"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Tue"
                    android:visibility="gone"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_elem2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="invisible"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_elem3"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue"
                    android:text="W"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Wed"
                    android:visibility="gone"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/txt_elem3"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/txt_elem_lights"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Lights"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_elem_lights"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/txt_elem_blinds"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_border_blue"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Blinds"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_elem_blinds"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/txt_elem_audio"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/grey_border_blue"
                    android:textSize="@dimen/all_text_size" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Audio"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_elem_audio"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/txt_elem_tracks"
                    android:layout_width="@dimen/icon_height_size"
                    android:layout_height="@dimen/icon_height_size"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/grey_border_blue"
                    android:layout_alignParentTop="true"
                    android:textSize="@dimen/all_text_size" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Tracks"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_elem_tracks"/>
            </RelativeLayout>


        </LinearLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="0.5dp"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_save"
        android:background="@drawable/btn_border_white"
        android:text="Save"
        android:enabled="false"
        android:visibility="visible"
        android:textAllCaps="false"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="@dimen/all_text_size"
        android:textColor="@color/white"/>


</LinearLayout>
</LinearLayout>